@page "/counter"

<PageTitle>Counter</PageTitle>

<MudPaper Elevation="1" Width="220px" Class="pa-4 ma-4 d-flex flex-column mud-background-gray rounded-lg">
    <MudText Typo="Typo.h6">Current count: @fibResult</MudText>
    <MudDivider />
    <MudGrid Justify="Justify.Center">
        <MudItem>
            <MudIconButton Icon="@Icons.Material.Filled.Minimize" Color="Color.Secondary" OnClick="DecrementCount"></MudIconButton>
            
        </MudItem>
        <MudItem>
            <MudIconButton Icon="@Icons.Material.Filled.Add" Color="Color.Primary" OnClick="IncrementCount"></MudIconButton>
        </MudItem>
    </MudGrid>

</MudPaper>



@code {
    private int currentCount = 0;
    private int fibResult = 0;
    private void IncrementCount()
    {
        currentCount++;
        fibResult = Fib(currentCount);
    }
    private void DecrementCount()
    {
        currentCount--;
        currentCount = currentCount < 0 ? 0 : currentCount;
        fibResult = Fib(currentCount);

    }
    static int Fib(int n)
    {
        if (n < 0) return 0;
        if (n == 0) return 1;
        return (n < 2) ? n : Fib(n - 1) + Fib(n - 2);
    }
}
